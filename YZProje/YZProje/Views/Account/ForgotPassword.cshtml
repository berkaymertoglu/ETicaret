@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Şifremi Unuttum";
}

<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="card shadow p-4" style="width: 400px; border-radius: 10px;">
        <h2 class="text-center mb-4">Şifremi Unuttum</h2>

        <!-- Hata veya Başarı Mesajlarını Göster -->
        @if (ViewBag.SuccessMessage != null)
        {
            <div class="alert alert-success text-center">@ViewBag.SuccessMessage</div>
        }

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Message</div>
        }

        <form method="post" asp-controller="Account" asp-action="ForgotPassword">
            <div class="mb-3">
                <label for="email" class="form-label">E-Posta</label>
                <input type="email" class="form-control" id="email" name="Email" required>
            </div>

            <div class="d-grid gap-2">
                <button type="submit" class="btn btn-primary">Gönder</button>
            </div>
        </form>

        <div class="text-center mt-3">
            <a asp-controller="Account" asp-action="Login">Giriş Yap</a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        console.log("Forgot Password Page Loaded");
    </script>
}
